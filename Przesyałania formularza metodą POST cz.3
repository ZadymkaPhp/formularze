                $result = null;

                // sprawdz
                if ($_SERVER["REQUEST_METHOD"] == "POST") {
                    // wez dane 
                    $operation = isset($_POST['operation']) ? $_POST['operation'] : null;
                    $number1 = isset($_POST['number1']) ? $_POST['number1'] : null;
                    $number2 = isset($_POST['number2']) ? $_POST['number2'] : null;

                    //opercaje
                    switch ($operation) {
                        case 'addition':
                            $result = $number1 + $number2;
                            break;
                        case 'subtraction':
                            $result = $number1 - $number2;
                            break;
                        case 'multiplication':
                            $result = $number1 * $number2;
                            break;
                        case 'division':
                            if ($number2 != 0) {
                                $result = $number1 / $number2;
                            } else {
                                echo "<p>Nie można dzielić przez zero!</p>";
                            }
                            break;
                        default:
                            echo "<p>Nie wybrano działania matematycznego.</p>";
                    }

                    //wyswietl wynik
                    if ($result !== null) {
                        echo "<h3>Wyniki obliczeń:</h3>";
                        echo "<p>Wybrane działanie: " . ucfirst($operation) . "</p>";
                        echo "<p>Wprowadzona pierwsza liczba: $number1</p>";
                        echo "<p>Wprowadzona druga liczba: $number2</p>";
                        echo "<p>Wynik: $result</p>";
                    }
                }
